{
  "name": "frami",
  "version": "0.2.1",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:ts": "tsc",
    "start:dev": "NODE_ENV=development electron dist/main.js",
    "start": "electron dist/main.js",
    "build": "npm run build:ts && electron-builder",
    "build:clean": "rm -rf dist && rm -rf build && npm run build:ts && npm run build"
  },
  "keywords": [
    "electron",
    "browser",
    "frameless",
    "broadcasting"
  ],
  "author": "Rakan Al-Shammari",
  "license": "MIT",
  "description": "A frameless browser designed for broadcasting software integration",
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^22.15.3",
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.frami.app",
    "productName": "Frami",
    "copyright": "Copyright Â© 2025 ${author}",
    "files": [
      "dist/**/*",
      "!dist/mac-arm64",
      "!dist/_unpacked",
      "!dist/builder-debug.yml",
      "!dist/builder-effective-config.yaml"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "src/assets/icons/icon.icns",
      "darkModeSupport": true
    },
    "win": {
      "icon": "src/assets/icons/icon.ico"
    },
    "linux": {
      "icon": "src/assets/icons/icons",
      "category": "Utility"
    }
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1"
  }
}
