{
  "name": "frami",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:dev": "NODE_ENV=development electron src/main.js",
    "start": "electron src/main.js",
    "build": "electron-builder"
  },
  "keywords": [
    "electron",
    "browser",
    "frameless",
    "broadcasting"
  ],
  "author": "Rakan Al-Shammari",
  "license": "MIT",
  "description": "A frameless browser designed for broadcasting software integration",
  "devDependencies": {
    "electron": "^36.0.1",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3"
  },
  "build": {
    "appId": "com.frami.app",
    "productName": "Frami",
    "copyright": "Copyright Â© 2025 ${author}",
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "src/assets/icons/icon.icns",
      "darkModeSupport": true
    },
    "win": {
      "icon": "src/assets/icons/icon.ico"
    },
    "linux": {
      "icon": "src/assets/icons/icons",
      "category": "Utility"
    }
  }
}
